# Environment Variables for Rug or Riches
# Copy this file to .env.local and fill in your values

# Next.js Configuration
NEXT_PUBLIC_APP_NAME="Rug or Riches"
NEXT_PUBLIC_APP_DESCRIPTION="A futuristic Web3 prediction game built around the $GUI token"

# API Configuration (if needed for future features)
# NEXT_PUBLIC_API_URL=http://localhost:3000/api
# NEXT_PUBLIC_WEBSOCKET_URL=ws://localhost:3000/ws

# Analytics (optional)
# NEXT_PUBLIC_GA_ID=your-google-analytics-id
# NEXT_PUBLIC_MIXPANEL_TOKEN=your-mixpanel-token

# Feature Flags
NEXT_PUBLIC_ENABLE_SOUND=true
NEXT_PUBLIC_ENABLE_ANIMATIONS=true
NEXT_PUBLIC_ENABLE_NOTIFICATIONS=true

# Development Configuration
NODE_ENV=development 